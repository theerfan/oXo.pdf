{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Node Server",
            "type": "shell",
            "command": "node",
            "args": ["server.js"],
            "isBackground": true,
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
                    "regexp": "^.*$"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Server running.*$",
                    "endsPattern": "^.*$"
                }
            }
        },
    ]
}
